<Application x:Class="GUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GUI"
             
              xmlns:viewModels="clr-namespace:GUI.ViewModels" 
             xmlns:views="clr-namespace:GUI.Views"

             StartupUri="Views/MainWindow.xaml">
    
    
    <Application.Resources>
        <DataTemplate DataType="{x:Type TypeName=viewModels:HomeViewModel}">
            <views:HomeView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModels:P1ViewModel}">
            <views:P1View/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModels:P2ViewModel}">
            <views:P2View/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModels:P3ViewModel}">
            <views:P3View/>
        </DataTemplate>


    </Application.Resources>
</Application>
