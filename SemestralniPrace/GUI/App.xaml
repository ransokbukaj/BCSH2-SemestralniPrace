<Application x:Class="GUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GUI"             
             xmlns:viewModels="clr-namespace:GUI.ViewModels" 
             xmlns:views="clr-namespace:GUI.Views"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type TypeName=viewModels:AddressViewModel}">
            <views:AddressView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModels:ArtistViewModel}">
            <views:ArtistView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModels:BuyerViewModel}">
            <views:BuyerView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModels:EducationProgramViewModel}">
            <views:EducationProgramView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModels:ExhibitionViewModel}">
            <views:ExhibitionView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModels:HistoryLogViewModel}">
            <views:HistoryLogView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModels:HomeViewModel}">
            <views:HomeView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModels:PaintingViewModel}">
            <views:PaintingView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModels:PostViewModel}">
            <views:PostView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModels:SaleViewModel}">
            <views:SaleView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModels:SculptureViewModel}">
            <views:SculptureView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModels:UserViewModel}">
            <views:UserView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModels:VisitViewModel}">
            <views:VisitView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModels:SystemCatalogViewModel}">
            <views:SystemCatalogView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModels:UserProfileViewModel}">
            <views:UserProfileView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModels:ArtistPublicViewModel}">
            <views:ArtistPublicView/>
        </DataTemplate>

        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

    </Application.Resources>
</Application>
