<UserControl x:Class="GUI.Views.AddressView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Background="White"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>

        <!-- Hlavička -->
        <StackPanel Grid.Row="0"
            Grid.ColumnSpan="2"
            Orientation="Horizontal"
            VerticalAlignment="Center"
            Margin="0,0,0,10">

            <TextBlock Text="Adresy"
               FontSize="24"
               FontWeight="Bold"
               VerticalAlignment="Center"/>

            <TextBox Width="200"
             Margin="20,0,0,0"
             VerticalAlignment="Center"
             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
             ToolTip="Vyhledat adresu (ulice, město, PSČ)"
             />
        </StackPanel>


        <DataGrid Grid.Row="1" Grid.Column="0"
                  ItemsSource="{Binding Addresses}"
                  SelectedItem="{Binding SelectedAddress, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="0,0,10,0">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Ulice" Binding="{Binding Street}" Width="*"/>
                <DataGridTextColumn Header="Č.p." Binding="{Binding HouseNumber}" Width="*"/>
                <DataGridTextColumn Header="Č.o." Binding="{Binding StreetNumber}" Width="*"/>
                <DataGridTextColumn Header="Město" Binding="{Binding Post.City}" Width="*"/>
                <DataGridTextColumn Header="PSČ" Binding="{Binding Post.PSC}" Width="*"/>
            </DataGrid.Columns>

        </DataGrid>


      
        <ScrollViewer Grid.Row="1" Grid.Column="1"
                      Margin="10,0,0,0"
                      VerticalScrollBarVisibility="Auto">

            <StackPanel>

                <TextBlock Text="Detail adresy"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

           
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Ulice:" Width="120"/>
                    <TextBox Text="{Binding SelectedAddress.Street, UpdateSourceTrigger=PropertyChanged}"
                             Width="200"/>
                </StackPanel>

               
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Č.p.:" Width="120"/>
                    <TextBox Text="{Binding SelectedAddress.HouseNumber, UpdateSourceTrigger=PropertyChanged}"
                             Width="80"/>
                </StackPanel>

                
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Č.o.:" Width="120"/>
                    <TextBox Text="{Binding SelectedAddress.StreetNumber, UpdateSourceTrigger=PropertyChanged}"
                             Width="80"/>
                </StackPanel>

                
                <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                    <TextBlock Text="Pošta:" Width="120"/>

                    <ComboBox Width="200"
                              ItemsSource="{Binding Posts}"
                              SelectedValue="{Binding SelectedAddress.Post.Id, Mode=TwoWay}"
                              SelectedValuePath="Id"
                              DisplayMemberPath="CityWithPSC"/>
                </StackPanel>

            </StackPanel>

        </ScrollViewer>


       
        <StackPanel Grid.Row="2" Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">

            <Button Content="Nový"
                    Command="{Binding NewCommand}"
                    Width="80"
                    Margin="0,0,10,0"/>

            <Button Content="Uložit"
                    Command="{Binding SaveCommand}"
                    Width="80"
                    Margin="0,0,10,0"/>

            <Button Content="Smazat"
                    Command="{Binding DeleteCommand}"
                    Width="80"/>

        </StackPanel>

    </Grid>
</UserControl>