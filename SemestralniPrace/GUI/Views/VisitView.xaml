<UserControl x:Class="GUI.Views.VisitView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">

        <!-- Stejná struktura jako ostatní view -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Hlavička -->
            <RowDefinition Height="*"/>
            <!-- Obsah -->
            <RowDefinition Height="Auto"/>
            <!-- CRUD tlačítka -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <!-- seznam návštěv -->
            <ColumnDefinition Width="6*"/>
            <!-- detail návštěvy -->
        </Grid.ColumnDefinitions>

        <!-- Hlavička -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2"
            Orientation="Horizontal"
            VerticalAlignment="Center"
            Margin="0,0,0,10">

            <TextBlock Text="Návštěvy"
               FontSize="24"
               FontWeight="Bold"
               VerticalAlignment="Center"/>

            <TextBox Width="250"
             Margin="20,0,0,0"
             VerticalAlignment="Center"
             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
             ToolTip="Vyhledat (datum / typ návštěvy)"/>
        </StackPanel>

        <!-- LEVÁ ČÁST – seznam návštěv -->
        <DataGrid Grid.Row="1" Grid.Column="0"
                  ItemsSource="{Binding Visits}"
                  SelectedItem="{Binding SelectedVisit, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="0,0,10,0">
            <DataGrid.Columns>
                <!--<DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>-->
                <DataGridTextColumn Header="Datum návštěvy"
                                    Binding="{Binding DateOfVisit, StringFormat=\{0:dd.MM.yyyy\}}"
                                    Width="*"/>
                <DataGridTextColumn Header="Typ návštěvy"
                                    Binding="{Binding VisitType.Name}"
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- PRAVÁ ČÁST – detail návštěvy ve ScrollVieweru -->
        <ScrollViewer Grid.Row="1" Grid.Column="1"
                      Margin="10,0,0,0"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <TextBlock Text="Detail návštěvy"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

                <!--<StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="ID:" Width="140"/>
                    <TextBlock Text="{Binding SelectedVisit.Id}"/>
                </StackPanel>-->

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Datum:" Width="140"/>
                    <DatePicker SelectedDate="{Binding SelectedVisit.DateOfVisit, UpdateSourceTrigger=PropertyChanged}"
                                Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Typ návštěvy:" Width="140"/>
                    <ComboBox ItemsSource="{Binding VisitTypes}"
                              DisplayMemberPath="NamePrice"
                              SelectedValuePath="Id"
                              SelectedValue="{Binding SelectedVisit.VisitType.Id, Mode=TwoWay}"
                              Width="200" />
                </StackPanel>

                <!-- Výstava -->
                <StackPanel Orientation="Horizontal" Margin="0,15,0,5">
                    <TextBlock Text="Výstava:" Width="140"/>
                    <ComboBox ItemsSource="{Binding Exhibitions}"
                              SelectedValuePath="Id"
                              DisplayMemberPath="Name"
                              SelectedValue="{Binding SelectedVisit.ExhibitionCounter.Id, Mode=TwoWay}"
                              Width="200"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- SPODNÍ TLAČÍTKA – sjednocená poloha -->
        <StackPanel Grid.Row="2" Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="Nový"
                    Command="{Binding NewCommand}"
                    Margin="0,0,10,0"
                    Width="80"/>
            <Button Content="Uložit"
                    Command="{Binding SaveCommand}"
                    Margin="0,0,10,0"
                    Width="80"/>
            <Button Content="Smazat"
                    Command="{Binding DeleteCommand}"
                    Width="80"/>
        </StackPanel>

    </Grid>
</UserControl>
