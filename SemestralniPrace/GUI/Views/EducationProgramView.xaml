<UserControl x:Class="GUI.Views.EducationProgramView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Background="White"
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Hlavička -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2"
            Orientation="Horizontal"
            VerticalAlignment="Center"
            Margin="0,0,0,10">

            <TextBlock Text="Vzdělávací programy"
               FontSize="24"
               FontWeight="Bold"
               VerticalAlignment="Center"/>

            <TextBox Width="260"
             Margin="20,0,0,0"
             VerticalAlignment="Center"
             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
             ToolTip="Hledat podle názvu / popisu"
             />
        </StackPanel>

        <DataGrid Grid.Row="1" Grid.Column="0"
                  ItemsSource="{Binding EducationPrograms}"
                  SelectedItem="{Binding SelectedEducationProgram, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="0,0,10,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Název" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Od" Binding="{Binding From, StringFormat=\{0:d\}}" Width="*"/>
                <DataGridTextColumn Header="Do" Binding="{Binding To, StringFormat=\{0:d\}}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="1" Grid.Column="1" Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>


            <ScrollViewer Grid.Row="0"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Detail programu"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Název:" Width="140"/>
                        <TextBox Text="{Binding SelectedEducationProgram.Name, UpdateSourceTrigger=PropertyChanged}"
                                 Width="250"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                        <TextBlock Text="Od:" Width="140"/>
                        <DatePicker SelectedDate="{Binding SelectedEducationProgram.From, UpdateSourceTrigger=PropertyChanged}"
                                    Width="200"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Do:" Width="140"/>
                        <DatePicker SelectedDate="{Binding SelectedEducationProgram.To, UpdateSourceTrigger=PropertyChanged}"
                                    Width="200"/>
                    </StackPanel>

                    <TextBlock Text="Popis:" Margin="0,5,0,5"/>
                    <TextBox Text="{Binding SelectedEducationProgram.Description, UpdateSourceTrigger=PropertyChanged}"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             Height="80"
                             VerticalScrollBarVisibility="Auto"/>

                    <TextBlock Text="Výstavy v programu"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,15,0,5"/>

                    <DataGrid ItemsSource="{Binding ExhibitionsInProgram}"
                              SelectedItem="{Binding SelectedExhibitionToRemove, Mode=TwoWay}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Height="150">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Název" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Od" Binding="{Binding From, StringFormat=\{0:d\}}" Width="*"/>
                            <DataGridTextColumn Header="Do" Binding="{Binding To, StringFormat=\{0:d\}}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Orientation="Horizontal"
                                Margin="0,10,0,0">
                        <TextBlock Text="Přidat výstavu:"
                                   Width="140"
                                   VerticalAlignment="Center"/>
                        <ComboBox Width="200"
                                  ItemsSource="{Binding AvailableExhibitions}"
                                  SelectedItem="{Binding SelectedExhibitionToAdd, Mode=TwoWay}"
                                  DisplayMemberPath="Name"
                                  Margin="0,0,10,0"/>
                        <Button Content="Přidat"
                                Width="80"
                                Margin="0,0,5,0"
                                Command="{Binding AddExhibitionToProgramCommand}"/>
                        <Button Content="Odebrat"
                                Width="80"
                                Command="{Binding RemoveExhibitionFromProgramCommand}"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,10,0,0">
                <Button Content="Nový"
                        Command="{Binding NewCommand}"
                        Margin="0,0,10,0"
                        Width="80"/>
                <Button Content="Uložit"
                        Command="{Binding SaveCommand}"
                        Margin="0,0,10,0"
                        Width="80"/>
                <Button Content="Smazat"
                        Command="{Binding DeleteCommand}"
                        Width="80"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
