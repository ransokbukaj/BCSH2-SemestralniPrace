<UserControl x:Class="GUI.Views.PaintingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Background="White"
             d:DesignHeight="450" d:DesignWidth="900">
    <Grid Margin="10">
        <!-- Hlavní rozdělení: hlavička, obsah, spodní tlačítka -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- nadpis -->
            <RowDefinition Height="*"/>
            <!-- obsah: DataGrid + detail -->
            <RowDefinition Height="Auto"/>
            <!-- hlavní tlačítka -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Nadpis -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                   Text="Obrazy"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <!-- Seznam obrazů -->
        <DataGrid Grid.Row="1" Grid.Column="0"
                  ItemsSource="{Binding Paintings}"
                  SelectedItem="{Binding SelectedPainting, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="0,0,10,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Název" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Vydáno" Binding="{Binding PublishedDate, StringFormat=\{0:d\}}" Width="*"/>
                <DataGridTextColumn Header="Výška" Binding="{Binding Height}" Width="*"/>
                <DataGridTextColumn Header="Šířka" Binding="{Binding Width}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Detail obrazu (scrolluje se jen tohle) -->
        <ScrollViewer Grid.Row="1" Grid.Column="1"
                      Margin="10,0,0,0"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <TextBlock Text="Detail obrazu"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="ID:" Width="140"/>
                    <TextBlock Text="{Binding SelectedPainting.Id}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Název:" Width="140"/>
                    <TextBox Text="{Binding SelectedPainting.Name, UpdateSourceTrigger=PropertyChanged}"
                             Width="250"/>
                </StackPanel>

                <TextBlock Text="Popis:" Margin="0,5,0,5"/>
                <TextBox Text="{Binding SelectedPainting.Description, UpdateSourceTrigger=PropertyChanged}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Height="80"
                         VerticalScrollBarVisibility="Auto"/>

                <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                    <TextBlock Text="Datum vzniku:" Width="140"/>
                    <DatePicker SelectedDate="{Binding SelectedPainting.PublishedDate, UpdateSourceTrigger=PropertyChanged}"
                                Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Výška (cm):" Width="140"/>
                    <TextBox Text="{Binding SelectedPainting.Height, UpdateSourceTrigger=PropertyChanged}"
                             Width="80"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Šířka (cm):" Width="140"/>
                    <TextBox Text="{Binding SelectedPainting.Width, UpdateSourceTrigger=PropertyChanged}"
                             Width="80"/>
                </StackPanel>

                <!-- Podklad -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                    <TextBlock Text="Podklad:" Width="140"/>
                    <ComboBox Width="200"
                              ItemsSource="{Binding Bases}"
                              SelectedValuePath="Id"
                              SelectedValue="{Binding SelectedPainting.Base.Id, Mode=TwoWay}"
                              DisplayMemberPath="Name" />
                </StackPanel>

                <!-- Technika -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Technika:" Width="140"/>
                    <ComboBox Width="200"
                              ItemsSource="{Binding Techniques}"
                              SelectedValuePath="Id"
                              SelectedValue="{Binding SelectedPainting.Technique.Id, Mode=TwoWay}"
                              DisplayMemberPath="Name" />
                </StackPanel>

                <!-- GALERIE OBRÁZKŮ + INFO O SOUBORU -->
                <TextBlock Text="Obrázky:" Margin="0,10,0,5"/>

                <!-- Obrázek + info vedle sebe -->
                <Grid Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Hlavní obrázek -->
                    <Border Grid.Column="0"
                            Width="250" Height="250"
                            Background="#FFEFEFEF"
                            BorderBrush="#FFCCCCCC"
                            BorderThickness="1"
                            HorizontalAlignment="Left"
                            Margin="0,0,10,0">
                        <!-- předpoklad: CurrentImagePath (string) ve ViewModelu nebo SelectedPainting.ImagePath -->
                        <Image Source="{Binding CurrentImagePath}"
                               Stretch="Uniform"/>
                    </Border>

                    <!-- Info o souboru -->
                    <StackPanel Grid.Column="1"
                                VerticalAlignment="Top">
                        <TextBlock Text="Název souboru:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding SelectedPainting.FileName}"
                                   Margin="0,0,0,5"/>

                        <TextBlock Text="Typ souboru:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding SelectedPainting.FileType}"/>
                    </StackPanel>
                </Grid>

                <!-- Přepínací tlačítka + info o pozici v galerii -->
                <StackPanel Orientation="Horizontal"
                            Margin="0,5,0,0"
                            VerticalAlignment="Center">
                    <Button Content="◀"
                            Width="40"
                            Margin="0,0,5,0"
                            Command="{Binding PreviousImageCommand}"/>
                    <TextBlock Text="{Binding ImagePositionText}"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <Button Content="▶"
                            Width="40"
                            Command="{Binding NextImageCommand}"/>
                </StackPanel>

                <!-- Přidat / smazat aktuální obrázek -->
                <StackPanel Orientation="Horizontal"
                            Margin="0,5,0,0">
                    <Button Content="Přidat obrázek"
                            Width="120"
                            Margin="0,0,10,0"
                            Command="{Binding AddImageCommand}"/>
                    <Button Content="Smazat aktuální"
                            Width="120"
                            Command="{Binding RemoveCurrentImageCommand}"/>
                </StackPanel>

                <!-- Autoři -->
                <TextBlock Text="Autoři:" Margin="0,15,0,5"/>

                <!-- Seznam autorů obrazu -->
                <ListBox ItemsSource="{Binding SelectedPainting.Artists}"
                         SelectedItem="{Binding SelectedArtistOnPainting, Mode=TwoWay}"
                         DisplayMemberPath="LastName"
                         Height="120"/>

                <!-- Přidání / odebrání autora -->
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Přidat autora:" Width="140" VerticalAlignment="Center"/>

                    <ComboBox Width="200"
                              ItemsSource="{Binding AvailableArtists}"
                              SelectedItem="{Binding SelectedArtistToAdd, Mode=TwoWay}"
                              DisplayMemberPath="LastName"
                              Margin="0,0,10,0"/>

                    <Button Content="Přidat"
                            Width="80"
                            Margin="0,0,5,0"
                            Command="{Binding AddArtistToPaintingCommand}"/>

                    <Button Content="Odebrat"
                            Width="80"
                            Command="{Binding RemoveArtistFromPaintingCommand}"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- Hlavní tlačítka pro obraz – mimo ScrollViewer, vždy viditelná -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="Načíst"
                    Command="{Binding LoadCommand}"
                    Margin="0,0,10,0"
                    Width="80"/>
            <Button Content="Nový"
                    Command="{Binding NewCommand}"
                    Margin="0,0,10,0"
                    Width="80"/>
            <Button Content="Uložit"
                    Command="{Binding SaveCommand}"
                    Margin="0,0,10,0"
                    Width="80"/>
            <Button Content="Smazat"
                    Command="{Binding DeleteCommand}"
                    Width="80"/>
        </StackPanel>
    </Grid>
</UserControl>
