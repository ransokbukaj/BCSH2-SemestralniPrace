<UserControl x:Class="GUI.Views.UserProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="clr-namespace:GUI.Helpers"
             mc:Ignorable="d"
             Background="White"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="10">
        <!-- Hlavička, obsah, spodní tlačítka -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!-- nadpis -->
            <RowDefinition Height="*"/>     <!-- obsah (scroll) -->
            <RowDefinition Height="Auto"/>  <!-- hlavní tlačítka -->
        </Grid.RowDefinitions>

        <!-- Nadpis -->
        <TextBlock Grid.Row="0"
                   Text="Můj profil"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <!-- Obsah profilu: údaje + změna hesla -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Osobní údaje -->
                <GroupBox Header="Osobní údaje" Margin="0,0,0,10">
                    <StackPanel Margin="10">

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Uživatelské jméno:" Width="160" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding CurrentUser.Username, UpdateSourceTrigger=PropertyChanged}"
                                     Width="200"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Jméno:" Width="160" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding CurrentUser.FirstName, UpdateSourceTrigger=PropertyChanged}"
                                     Width="200"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Příjmení:" Width="160" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding CurrentUser.LastName, UpdateSourceTrigger=PropertyChanged}"
                                     Width="200"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Email:" Width="160" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding CurrentUser.Email, UpdateSourceTrigger=PropertyChanged}"
                                     Width="200"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Telefon:" Width="160" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding CurrentUser.PhoneNumber, UpdateSourceTrigger=PropertyChanged}"
                                     Width="200"/>
                        </StackPanel>

                        <!-- Role jen pro info (nebo ComboBox, když chceš měnit) -->
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                            <TextBlock Text="Role:" Width="160" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding CurrentUser.Role.Name}"/>
                        </StackPanel>

                    </StackPanel>
                </GroupBox>

                <!-- Změna hesla -->
                <GroupBox Header="Změna hesla">
                    <StackPanel Margin="10">

                        

                        <!-- nové heslo -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Nové heslo:" Width="160" VerticalAlignment="Center"/>
                            <PasswordBox
                                            Width="200"
                                            helpers:PasswordBoxHelper.BindPassword="True"
                                            helpers:PasswordBoxHelper.BoundPassword="{Binding NewPassword, Mode=TwoWay}" />
                        </StackPanel>

                        <!-- potvrzení nového hesla -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Nové heslo znovu:" Width="160" VerticalAlignment="Center"/>
                            <PasswordBox  Width="200"
                                       helpers:PasswordBoxHelper.BindPassword="True"
                                       helpers:PasswordBoxHelper.BoundPassword="{Binding NewPasswordConfirm, Mode=TwoWay}" />
                        </StackPanel>

                        <!-- chybová / informační hláška -->
                        <TextBlock Text="{Binding ErrorLog}"
                                   Foreground="Red"
                                   Margin="0,5,0,0"
                                   TextWrapping="Wrap"/>

                        <!-- tlačítko pro změnu hesla (logika ve ViewModelu) -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Margin="0,10,0,0">
                            <Button Content="Změnit heslo"
                                    Width="120"
                                    Command="{Binding ChangePasswordCommand}"/>
                        </StackPanel>

                    </StackPanel>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>

        <!-- Spodní tlačítka – nezávislá na scrollu -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="Uložit profil"
                    Command="{Binding SaveProfileCommand}"
                    Margin="0,0,10,0"
                    Width="110"/>
            <Button Content="Zavřít"
                    Command="{Binding CloseProfileCommand}"
                    Width="80"/>
        </StackPanel>
    </Grid>
</UserControl>
