<Window x:Class="GUI.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Uživatel"
        Height="350" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Hlavička okna -->
        <TextBlock Grid.Row="0"
                   Text="Přihlášení / registrace"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,10"
                   HorizontalAlignment="Center"/>

        <!-- Přepínání mezi login / registrace -->
        <TabControl Grid.Row="1">
            <!-- TAB: Přihlášení -->
            <TabItem Header="Přihlášení">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Uživatelské jméno -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Uživatel:"
                               VerticalAlignment="Center"
                               Margin="0,0,5,5"/>
                    <TextBox Grid.Row="0" Grid.Column="1"
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,5"/>

                    <!-- Heslo -->
                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Text="Heslo:"
                               VerticalAlignment="Center"
                               Margin="0,0,5,5"/>
                    <TextBox Grid.Row="1" Grid.Column="1"
                             Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,5"/>

                    <!-- Chybová hláška pro login -->
                    <TextBlock Grid.Row="2" Grid.ColumnSpan="2"
                               Text="{Binding LoginError}"
                               Foreground="Red"
                               Margin="0,5,0,5"
                               TextWrapping="Wrap"/>

                    <!-- Tlačítka -->
                    <StackPanel Grid.Row="3" Grid.ColumnSpan="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,10,0,0">
                        <Button Content="Přihlásit"
                                Width="90"
                                Margin="0,0,10,0"
                                IsDefault="True"
                                Command="{Binding LoginCommand}"/>
                        <Button Content="Zavřít"
                                Width="80"
                                IsCancel="True"
                                Command="{Binding CancelCommand}"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- TAB: Registrace -->
            <TabItem Header="Registrace">
                <ScrollViewer Margin="10"
                              VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Uživatelské jméno -->
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="Uživatel:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,5"/>
                        <TextBox Grid.Row="0" Grid.Column="1"
                                 Text="{Binding RegUsername, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,5"/>

                        <!-- Heslo -->
                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="Heslo:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,5"/>
                        <TextBox Grid.Row="1" Grid.Column="1"
                                 Text="{Binding RegPassword, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,5"/>

                        <!-- Potvrzení hesla -->
                        <TextBlock Grid.Row="2" Grid.Column="0"
                                   Text="Heslo znovu:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,5"/>
                        <TextBox Grid.Row="2" Grid.Column="1"
                                 Text="{Binding RegPasswordConfirm, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,5"/>

                        <!-- Jméno -->
                        <TextBlock Grid.Row="3" Grid.Column="0"
                                   Text="Jméno:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,5"/>
                        <TextBox Grid.Row="3" Grid.Column="1"
                                 Text="{Binding RegFirstName, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,5"/>

                        <!-- Příjmení -->
                        <TextBlock Grid.Row="4" Grid.Column="0"
                                   Text="Příjmení:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,5"/>
                        <TextBox Grid.Row="4" Grid.Column="1"
                                 Text="{Binding RegLastName, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,5"/>

                        <!-- Email -->
                        <TextBlock Grid.Row="5" Grid.Column="0"
                                   Text="Email:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,5"/>
                        <TextBox Grid.Row="5" Grid.Column="1"
                                 Text="{Binding RegEmail, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,5"/>

                        <!-- Telefon -->
                        <TextBlock Grid.Row="6" Grid.Column="0"
                                   Text="Telefon:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,5"/>
                        <TextBox Grid.Row="6" Grid.Column="1"
                                 Text="{Binding RegPhone, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,5"/>

                        <!-- Chybová hláška pro registraci -->
                        <TextBlock Grid.Row="7" Grid.ColumnSpan="2"
                                   Text="{Binding RegisterError}"
                                   Foreground="Red"
                                   Margin="0,5,0,5"
                                   TextWrapping="Wrap"/>

                        <!-- Tlačítka -->
                        <StackPanel Grid.Row="8" Grid.ColumnSpan="2"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Margin="0,10,0,0">
                            <Button Content="Registrovat"
                                    Width="90"
                                    Margin="0,0,10,0"
                                    Command="{Binding RegisterCommand}"/>
                            <Button Content="Zavřít"
                                    Width="80"
                                    Command="{Binding CancelCommand}"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
