<Window x:Class="GUI.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:GUI.Helpers"
        Title="Uživatel"
        Height="365" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Hlavička -->
        <TextBlock Grid.Row="0"
                   Text="Přihlášení / registrace"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,10"
                   HorizontalAlignment="Center"/>

        <TabControl Grid.Row="1">

            <!-- PŘIHLÁŠENÍ -->
            <TabItem Header="Přihlášení">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Uživatel:"
                               VerticalAlignment="Center"
                               Margin="0,0,5,5"/>
                    <TextBox Grid.Row="0" Grid.Column="1"
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,5"/>

                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Text="Heslo:"
                               VerticalAlignment="Center"
                               Margin="0,0,5,5"/>
                    <PasswordBox Grid.Row="1" Grid.Column="1"
                                 Margin="0,0,0,5"
                                 helpers:PasswordBoxHelper.BindPassword="True"
                                 helpers:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay}" />

                    <!-- Chyba -->
                    <TextBlock Grid.Row="2" Grid.ColumnSpan="2"
                               Text="{Binding LoginError}"
                               Foreground="Red"
                               Margin="0,5,0,5"
                               TextWrapping="Wrap"/>

                    <!-- Tlačítka -->
                    <StackPanel Grid.Row="3" Grid.ColumnSpan="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,10,0,0">
                        <Button Content="Přihlásit"
                                Width="90"
                                Margin="0,0,10,0"
                                IsDefault="True"
                                Command="{Binding LoginCommand}"/>
                        <Button Content="Zavřít"
                                Width="80"
                                IsCancel="True"
                                Command="{Binding CancelCommand}"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- REGISTRACE -->
            <TabItem Header="Registrace">
                <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="Uživatel:" Margin="0,0,5,5"
                                   VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1"
                                 Text="{Binding RegUsername, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,5"/>


                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="Heslo:" Margin="0,0,5,5"
                                   VerticalAlignment="Center"/>
                        <PasswordBox Grid.Row="1" Grid.Column="1"
                                     Margin="0,0,0,5"
                                     helpers:PasswordBoxHelper.BindPassword="True"
                                     helpers:PasswordBoxHelper.BoundPassword="{Binding RegPassword, Mode=TwoWay}" />

                        <TextBlock Grid.Row="2" Grid.Column="0"
                                   Text="Heslo znovu:" Margin="0,0,5,5"
                                   VerticalAlignment="Center"/>
                        <PasswordBox Grid.Row="2" Grid.Column="1"
                                     Margin="0,0,0,5"
                                     helpers:PasswordBoxHelper.BindPassword="True"
                                     helpers:PasswordBoxHelper.BoundPassword="{Binding RegPasswordConfirm, Mode=TwoWay}" />

                        <TextBlock Grid.Row="3" Grid.Column="0"
                                   Text="Jméno:" Margin="0,0,5,5"
                                   VerticalAlignment="Center"/>
                        <TextBox Grid.Row="3" Grid.Column="1"
                                 Text="{Binding RegFirstName, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,5"/>

                        <TextBlock Grid.Row="4" Grid.Column="0"
                                   Text="Příjmení:" Margin="0,0,5,5"
                                   VerticalAlignment="Center"/>
                        <TextBox Grid.Row="4" Grid.Column="1"
                                 Text="{Binding RegLastName, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,5"/>

                        <TextBlock Grid.Row="5" Grid.Column="0"
                                   Text="Email:" Margin="0,0,5,5"
                                   VerticalAlignment="Center"/>
                        <TextBox Grid.Row="5" Grid.Column="1"
                                 Text="{Binding RegEmail, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,5"/>

                        <TextBlock Grid.Row="6" Grid.Column="0"
                                   Text="Telefon:" Margin="0,0,5,5"
                                   VerticalAlignment="Center"/>
                        <TextBox Grid.Row="6" Grid.Column="1"
                                 Text="{Binding RegPhone, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,5"/>

                        <!-- Chyba -->
                        <TextBlock Grid.Row="7" Grid.ColumnSpan="2"
                                   Text="{Binding RegisterError}"
                                   Foreground="Red"
                                   Margin="0,5,0,5"
                                   TextWrapping="Wrap"/>

                        <!-- Tlačítka -->
                        <StackPanel Grid.Row="8" Grid.ColumnSpan="2"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Margin="0,10,0,0">
                            <Button Content="Registrovat"
                                    Width="90"
                                    Margin="0,0,10,0"
                                    Command="{Binding RegisterCommand}"/>
                            <Button Content="Zavřít"
                                    Width="80"
                                    Command="{Binding CancelCommand}"/>
                        </StackPanel>
                    </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
