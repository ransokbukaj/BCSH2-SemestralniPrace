<UserControl x:Class="GUI.Views.ExhibitionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Background="White"
             d:DesignHeight="600" d:DesignWidth="1000">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <!-- HLAVIČKA -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                   Text="Výstavy"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <!-- LEVÁ STRANA: seznam výstav -->
        <DataGrid Grid.Row="1" Grid.Column="0"
                  ItemsSource="{Binding Exhibitions}"
                  SelectedItem="{Binding SelectedExhibition, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="0,0,10,0">
            <DataGrid.Columns>
                <!--<DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>-->
                <DataGridTextColumn Header="Název" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Od" Binding="{Binding From, StringFormat=\{0:d\}}" Width="*"/>
                <DataGridTextColumn Header="Do" Binding="{Binding To, StringFormat=\{0:d\}}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- PRAVÁ STRANA -->
        <Grid Grid.Row="1" Grid.Column="1" Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <!-- obsah (detail + seznam děl) ve ScrollVieweru -->
                <RowDefinition Height="*"/>
                <!-- spodní tlačítka, FIXNĚ, mimo ScrollViewer -->
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- SCROLLOVATELNÝ OBSAH -->
            <ScrollViewer Grid.Row="0"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- DETAIL VÝSTAVY -->
                    <TextBlock Text="Detail výstavy"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <!--<StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="ID:" Width="140"/>
                        <TextBlock Text="{Binding SelectedExhibition.Id}"/>
                    </StackPanel>-->

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Název:" Width="140"/>
                        <TextBox Text="{Binding SelectedExhibition.Name, UpdateSourceTrigger=PropertyChanged}"
                                 Width="250"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                        <TextBlock Text="Od:" Width="140"/>
                        <DatePicker SelectedDate="{Binding SelectedExhibition.From, UpdateSourceTrigger=PropertyChanged}"
                                    Width="200"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Do:" Width="140"/>
                        <DatePicker SelectedDate="{Binding SelectedExhibition.To, UpdateSourceTrigger=PropertyChanged}"
                                    Width="200"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Tžba v Kč:" Width="140"/>
                        <TextBox Text="{Binding SelectedExhibition.Profit, UpdateSourceTrigger=PropertyChanged}"
             Width="250"/>
                    </StackPanel>

                    <TextBlock Text="Popis:" Margin="0,5,0,5"/>
                    <TextBox Text="{Binding SelectedExhibition.Description, UpdateSourceTrigger=PropertyChanged}"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             Height="80"
                             VerticalScrollBarVisibility="Auto"/>

                    <!-- SEZNAM DĚL NA VÝSTAVĚ -->
                    <TextBlock Text="Díla na výstavě"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,15,0,5"/>

                    <DataGrid ItemsSource="{Binding ExhibitionArtPieces}"
                              SelectedItem="{Binding SelectedArtPieceToRemove, Mode=TwoWay}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Height="160"
                              Margin="0,0,0,5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Název díla"
                                                Binding="{Binding Name}"
                                                Width="2*"/>
                            <DataGridTextColumn Header="Typ díla"
                                                Binding="{Binding TypeToString}"
                                                Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- PŘIDÁNÍ DÍLA NA VÝSTAVU -->
                    <StackPanel Orientation="Horizontal"
                                Margin="0,5,0,0">
                        <TextBlock Text="Přidat dílo:"
                                   Width="100"
                                   VerticalAlignment="Center"/>
                        <ComboBox Width="220"
                                  ItemsSource="{Binding AvailableArtPieces}"
                                  SelectedItem="{Binding SelectedArtPieceToAdd, Mode=TwoWay}"
                                  DisplayMemberPath="Name"
                                  Margin="0,0,10,0"/>
                        <Button Content="Přidat"
                                Width="80"
                                Margin="0,0,5,0"
                                Command="{Binding AddArtPieceCommand}"/>
                        <Button Content="Odebrat"
                                Width="80"
                                Command="{Binding RemoveArtPieceCommand}"/>     

                    </StackPanel>

                    <!-- ODEBRÁNÍ DÍLA Z VÝSTAVY -->
                    

                </StackPanel>
            </ScrollViewer>

            <!-- SPODNÍ TLAČÍTKA – mimo ScrollViewer -->
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,10,0,0">
                <Button Content="Nový"
                        Command="{Binding NewCommand}"
                        Margin="0,0,10,0"
                        Width="80"/>
                <Button Content="Uložit"
                        Command="{Binding SaveCommand}"
                        Margin="0,0,10,0"
                        Width="80"/>
                <Button Content="Smazat"
                        Command="{Binding DeleteCommand}"
                        Width="80"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
