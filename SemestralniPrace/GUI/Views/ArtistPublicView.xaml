<UserControl x:Class="GUI.Views.ArtistPublicView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             Background="White"
             d:DesignHeight="1000" d:DesignWidth="800">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <!-- Hlavička -->
        <StackPanel Grid.Row="0"
            Grid.ColumnSpan="2"
            Orientation="Horizontal"
            VerticalAlignment="Center"
            Margin="0,0,0,10">

            <TextBlock Text="Přehled umělců"
               FontSize="24"
               FontWeight="Bold"
               VerticalAlignment="Center"/>

            <TextBlock Width="20"/>

            <TextBox Width="250"
             Height="28"
             VerticalContentAlignment="Center"
             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
             ToolTip="Vyhledat podle jména nebo příjmení"/>
        </StackPanel>

        <DataGrid Grid.Row="1" Grid.Column="0"
                  ItemsSource="{Binding Artists}"
                  SelectedItem="{Binding SelectedArtist, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="0,0,10,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Jméno" Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Příjmení" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="Narození" Binding="{Binding DateOfBirth, StringFormat=\{0:d\}}" Width="*"/>
                <DataGridTextColumn Header="Úmrtí" Binding="{Binding DateOfDeath, StringFormat=\{0:d\}}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <ScrollViewer Grid.Row="1" Grid.Column="1" Margin="10,0,0,0">
            <StackPanel>

                <TextBlock Text="Detail umělce"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>


                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Jméno:" Width="100"/>
                    <TextBox Text="{Binding SelectedArtist.FirstName}"
                             Width="200"
                             IsReadOnly="True"/>
                </StackPanel>


                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Příjmení:" Width="100"/>
                    <TextBox Text="{Binding SelectedArtist.LastName}"
                             Width="200"
                             IsReadOnly="True"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Narození:" Width="70"/>
                    <TextBox Text="{Binding SelectedArtist.DateOfBirth, StringFormat=\{0:d\}}"
                             Width="100"
                             IsReadOnly="True"/>

                    <TextBlock Text="Úmrtí:" Margin="15,0,0,0" Width="70"/>
                    <TextBox Text="{Binding SelectedArtist.DateOfDeath, StringFormat=\{0:d\}}"
                             Width="100"
                             IsReadOnly="True"/>
                </StackPanel>

                <TextBlock Text="Popis:" Margin="0,10,0,5"/>
                <TextBox Text="{Binding SelectedArtist.Description}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Height="100"
                         IsReadOnly="True"
                         VerticalScrollBarVisibility="Auto"/>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                    <TextBlock Text="Počet Děl:" Width="150"/>
                    <TextBox Text="{Binding Stat.AmounArtPiece}"
                        Width="150"
                        IsReadOnly="True"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Počet prodaných děl:" Width="150"/>
                    <TextBox Text="{Binding Stat.AmountSold}"
                        Width="150"
                        IsReadOnly="True"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Celkový zisk:" Width="150"/>
                    <TextBox Text="{Binding Stat.FullProfit}"
                        Width="150"
                        IsReadOnly="True"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Největší zisk:" Width="100"/>
                    <TextBox Text="{Binding Stat.MaxProfit}"
                        Width="200"
                        IsReadOnly="True"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Nejmenší zisk:" Width="100"/>
                    <TextBox Text="{Binding Stat.MinProfit}"
                        Width="200"
                        IsReadOnly="True"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Průměrný zisk:" Width="100"/>
                    <TextBox Text="{Binding Stat.AvgProfit}"
                        Width="200"
                        IsReadOnly="True"/>
                </StackPanel>


                <TextBlock Text="Umělecká díla umělce"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,15,0,5"/>

                <DataGrid ItemsSource="{Binding ArtPieces}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Height="200">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Název" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Typ" Binding="{Binding TypeToString}" Width="*"/>
                        <DataGridTextColumn Header="Datum vzniku" Binding="{Binding PublishedDate, StringFormat=\{0:d\}}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>


                <Separator Margin="0,15,0,15"/>

                <!-- Mentorská část -->
                <TextBlock Text="Mentorská část"
           FontSize="16"
           FontWeight="Bold"
           Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Umělců v linii:" Width="150"/>
                    <TextBox Text="{Binding MentorBranch.ArtistsInBranch}"
             Width="150"
             IsReadOnly="True"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Počet prodejů v linii:" Width="150"/>
                    <TextBox Text="{Binding MentorBranch.AmountofSales}"
             Width="150"
             IsReadOnly="True"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Zisk linie celkem:" Width="150"/>
                    <TextBox Text="{Binding MentorBranch.TotalProfit}"
             Width="150"
             IsReadOnly="True"/>
                </StackPanel>

                <TextBlock Text="Nejúspěšnější student"
           FontWeight="SemiBold"
           Margin="0,15,0,5"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Jméno:" Width="150"/>
                    <TextBox Text="{Binding MostSuccesfulMentore.ArtistName}"
             Width="250"
             IsReadOnly="True"/>
                </StackPanel>



                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Počet děl:" Width="150"/>
                    <TextBox Text="{Binding MostSuccesfulMentore.AmountOfArtPieces}"
             Width="80"
             IsReadOnly="True"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
