<UserControl x:Class="GUI.Views.ArtistView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             Background="White"
             d:DesignHeight="700" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <!-- Hlavička -->
        <StackPanel Grid.Row="0"
            Grid.ColumnSpan="2"
            Orientation="Horizontal"
            VerticalAlignment="Center"
            Margin="0,0,0,10">

            <TextBlock Text="Umělci"
               FontSize="24"
               FontWeight="Bold"
               VerticalAlignment="Center"/>

            <TextBox Width="250"
             Height="30"
             Margin="20,0,0,0"
             VerticalAlignment="Center"
             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
             ToolTip="Vyhledat podle jména nebo příjmení"/>

        </StackPanel>

        <DataGrid Grid.Row="1" Grid.Column="0"
                  ItemsSource="{Binding Artists}"
                  SelectedItem="{Binding SelectedArtist, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="0,0,10,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Jméno" Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Příjmení" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="Narození" Binding="{Binding DateOfBirth, StringFormat=\{0:d\}}" Width="*"/>
                <DataGridTextColumn Header="Úmrtí" Binding="{Binding DateOfDeath, StringFormat=\{0:d\}}" Width="*"/>
                
            </DataGrid.Columns>
        </DataGrid>

        <ScrollViewer Grid.Row="1" Grid.Column="1"
                      Margin="10,0,0,0"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Detail umělce"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>



                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Jméno:" Width="100" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding SelectedArtist.FirstName, UpdateSourceTrigger=PropertyChanged}"
                             Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Příjmení:" Width="100" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding SelectedArtist.LastName, UpdateSourceTrigger=PropertyChanged}"
                             Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Narození:" Width="100" VerticalAlignment="Center"/>
                    <DatePicker SelectedDate="{Binding SelectedArtist.DateOfBirth, UpdateSourceTrigger=PropertyChanged}"
                                Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Úmrtí:" Width="100" VerticalAlignment="Center"/>
                    <DatePicker SelectedDate="{Binding SelectedArtist.DateOfDeath, UpdateSourceTrigger=PropertyChanged}"
                                Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                    <TextBlock Text="Průměrná cena díla:" Width="150" VerticalAlignment="Center"/>
                    <TextBox  IsReadOnly="True" Text="{Binding SelectedArtist.AvgPrice, UpdateSourceTrigger=PropertyChanged}"
                    Width="150"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                    <TextBlock Text="Počet prodaných děl:" Width="150" VerticalAlignment="Center"/>
                    <TextBox IsReadOnly="True" Text="{Binding SelectedArtist.SoldPieces, UpdateSourceTrigger=PropertyChanged}"
                    Width="150"/>
                </StackPanel>

                <TextBlock Text="Popis:" Margin="0,10,0,5"/>
                <TextBox Text="{Binding SelectedArtist.Description, UpdateSourceTrigger=PropertyChanged}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Height="100"
                         VerticalScrollBarVisibility="Auto"/>

                <!-- Mentor -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                    <TextBlock Text="Mentor:" Width="50" VerticalAlignment="Center"/>

                    <ComboBox Width="220"
                      ItemsSource="{Binding Mentors}"
                      SelectedValue="{Binding SelectedArtist.IdOfMentor, Mode=TwoWay}"
                      SelectedValuePath="Id"
                      DisplayMemberPath="FullName"
                      Margin="0,0,10,0"/>   

                    <Button Content="Odebrat"
                        Width="70"
                        Command="{Binding RemoveMentorCommand}"/>   
                </StackPanel>

                <TextBlock Text="Umělecká díla umělce"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,15,0,5"/>

                <DataGrid ItemsSource="{Binding ArtPieces}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Height="200">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Název" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Typ" Binding="{Binding TypeToString}" Width="*"/>
                        <DataGridTextColumn Header="Datum vzniku" Binding="{Binding PublishedDate, StringFormat=\{0:d\}}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="10,15,0,0">
            <Button Content="Nový"
                    Command="{Binding NewCommand}"
                    Margin="0,0,10,0"
                    Width="80"/>
            <Button Content="Uložit"
                    Command="{Binding SaveCommand}"
                    Margin="0,0,10,0"
                    Width="80"/>
            <Button Content="Smazat"
                    Command="{Binding DeleteCommand}"
                    Width="80"/>
        </StackPanel>
    </Grid>
</UserControl>
